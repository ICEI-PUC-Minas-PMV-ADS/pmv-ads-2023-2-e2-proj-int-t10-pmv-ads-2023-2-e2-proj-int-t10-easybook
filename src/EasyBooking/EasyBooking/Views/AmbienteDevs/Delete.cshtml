@model EasyBooking.Models.AmbienteDev

@{
    ViewData["Title"] = "Delete";
}

<h1>Remover um Ambiente de Teste</h1>
<hr />

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex h-100">
            <div class="col-12 col-md-4 col-lg-6 col-xl-6">
                <div class="card bg-dark text-white" style="border-radius: 1rem; margin-bottom: 20px;">
                    <div class="card-body p-3">
                        <div class="mb-md-4 mt-md-3 pb-2">
                            <div>
                                <h3>Tem certeza que deseja remover esse registro?</h3>
                                <div>
                                    <h4>AmbienteDev</h4>
                                    <hr />
                                    <dl class="row">
                                        <dt class="col-sm-2 mb-2">
                                            @Html.DisplayNameFor(model => model.NomeAmbiente)
                                        </dt>
                                        <dd class="col-sm-10 mb-2">
                                            @Html.DisplayFor(model => model.NomeAmbiente)
                                        </dd>
                                        <dt class="col-sm-2 mb-2">
                                            @Html.DisplayNameFor(model => model.Descricao)
                                        </dt>
                                        <dd class="col-sm-10 mb-2">
                                            @Html.DisplayFor(model => model.Descricao)
                                        </dd>
                                        <dt class="col-sm-2 mb-2">
                                            @Html.DisplayNameFor(model => model.Capacidade)
                                        </dt>
                                        <dd class="col-sm-10 mb-2">
                                            @Html.DisplayFor(model => model.Capacidade)
                                        </dd>
                                        <dt class="col-sm-2 mb-2">
                                            @Html.DisplayNameFor(model => model.Disponibilidade)
                                        </dt>
                                        <dd class="col-sm-10 mb-2">
                                            @Html.DisplayFor(model => model.Disponibilidade)
                                        </dd>
                                    </dl>
                                    <form asp-action="Delete">
                                        <input type="hidden" asp-for="Id" />
                                        <a asp-action="Index" class="btn btn-outline-light btn-lg px-4 mb-3"> <i class="bi bi-skip-backward"></i>&nbsp;Voltar</a> |
                                        <input type="submit" value="Delete" class="btn btn-outline-danger btn-lg px-4 mb-3" />
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
