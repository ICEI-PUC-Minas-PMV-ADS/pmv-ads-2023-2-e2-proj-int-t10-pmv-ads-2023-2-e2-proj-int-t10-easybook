@model EasyBooking.Models.User

@{
    ViewData["Title"] = "Details";
}

<br />
<h1>Detalhes</h1>


<hr />

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex h-100">
            <div class="col-12 col-md-4 col-lg-6 col-xl-6">
                <div class="card bg-dark text-white" style="border-radius: 1rem; margin-bottom: 20px;">
                    <div class="card-body p-3">
                        <div class="mb-md-4 mt-md-3 pb-2">
                            <div>
                                <h4>Usuário</h4>
                                <dl class="row">
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.Nome)
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.Nome)
                                    </dd>
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.Email)
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.Email)
                                    </dd>
                                    <dt class="col-sm-2">
                                        @Html.DisplayNameFor(model => model.Perfil)
                                    </dt>
                                    <dd class="col-sm-10">
                                        @Html.DisplayFor(model => model.Perfil)
                                    </dd>
                                </dl>
                            </div>
                            <div>
                                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-light btn-lg px-4 mb-3"><i class="bi bi-pencil-square"></i>&nbsp; Editar</a> |
                                <a asp-action="Index" class="btn btn-outline-light btn-lg px-4 mb-3"> <i class="bi bi-skip-backward"></i>&nbsp; Voltar para lista</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
