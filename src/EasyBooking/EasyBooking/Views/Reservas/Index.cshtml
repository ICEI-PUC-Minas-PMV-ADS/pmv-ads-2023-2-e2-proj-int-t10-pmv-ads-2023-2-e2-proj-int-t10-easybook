@model IEnumerable<EasyBooking.Models.Reserva>

@{
    ViewData["Title"] = "Index";
}


<section class="vh-100 gradient-custom">
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-white">Reservas de Ambientes</h2>
            </div>
            <div class="col-6 text-end">
                <p>
                    <a asp-action="Create" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> &nbsp; Adicionar nova Reserva
                    </a>

                </p>

            </div>

        </div>

        <br /><br />

        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DataHoraInicio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataHoraTermino)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AmbienteDev)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataHoraInicio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataHoraTermino)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AmbienteDev.NomeAmbiente)
                        </td>
                        <td>
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>&nbsp; Editar</a> |
                            <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-binoculars"></i>&nbsp; Visualizar</a> |
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>&nbsp; Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
